@model IEnumerable<PruebaSeedCode2.Models.User>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #f4f4f4;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container-custom {
        max-width: 1200px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #444;
        margin-bottom: 30px;
    }

    a.btn-custom {
        background-color: #6c757d;
        color: #fff;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
    }

        a.btn-custom:hover {
            background-color: #5a6268;
        }

    table.table {
        margin-top: 20px;
        border-collapse: collapse;
    }

    table thead {
        background-color: #e9ecef;
    }

    table th, table td {
        vertical-align: middle;
        text-align: center;
    }

    .action-links a {
        margin: 0 5px;
        color: #007bff;
        text-decoration: none;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    img.user-img {
        max-width: 80px;
        max-height: 80px;
        border-radius: 8px;
        object-fit: cover;
    }
</style>

<div class="container-custom">
    <h1>Usuarios</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn-custom">+ Crear nuevo</a>
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.UserImage)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @if (item.UserImage != null)
                        {
                            var base64 = Convert.ToBase64String(item.UserImage);
                            var imgSrc = $"data:image/png;base64,{base64}";
                            <img src="@imgSrc" class="user-img" />
                        }
                        else
                        {
                            <span class="text-muted">Sin imagen</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Role.Name)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>