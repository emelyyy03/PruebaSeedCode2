@model PruebaSeedCode2.Models.User

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: #f4f4f4;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .details-container {
        max-width: 700px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        text-align: center;
        color: #444;
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        color: #333;
        margin-bottom: 15px;
    }

    img.detail-img {
        max-width: 200px;
        max-height: 200px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .action-links {
        text-align: center;
        margin-top: 30px;
    }

        .action-links a {
            text-decoration: none;
            color: #007bff;
            margin: 0 10px;
        }

            .action-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="details-container">
    <h1>Detalles del usuario</h1>
    <h4>Información completa</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Imagen</dt>
        <dd class="col-sm-9">
            @if (Model.UserImage != null)
            {
                var base64 = Convert.ToBase64String(Model.UserImage);
                var imgSrc = $"data:image/png;base64,{base64}";
                <img src="@imgSrc" class="detail-img" />
            }
            else
            {
                <span class="text-muted">Sin imagen</span>
            }
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.Name)</dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.Id">✏️ Editar</a> |
        <a asp-action="Index">← Volver a la lista</a>
    </div>
</div>
