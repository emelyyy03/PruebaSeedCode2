@model PruebaSeedCode2.Models.User

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f4f4f4;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-container {
        max-width: 700px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h1, h3, h4 {
        text-align: center;
        color: #444;
    }

    dt {
        font-weight: 600;
        color: #555;
    }

    dd {
        color: #333;
        margin-bottom: 15px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        margin-left: 15px;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .delete-actions {
        text-align: center;
        margin-top: 30px;
    }
</style>

<div class="delete-container">
    <h1>Eliminar usuario</h1>
    <h3>¿Estás seguro que deseas eliminar esto?</h3>
    <h4>Usuario</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Imagen</dt>
        <dd class="col-sm-9">
            @if (Model.UserImage != null)
            {
                var base64 = Convert.ToBase64String(Model.UserImage);
                var imgSrc = $"data:image/png;base64,{base64}";
                <img src="@imgSrc" style="max-width: 120px; border-radius: 10px;" />
            }
            else
            {
                <span class="text-muted">Sin imagen</span>
            }
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.Name)</dd>
    </dl>

    <form asp-action="Delete" class="delete-actions">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn-link">← Cancelar y volver</a>
    </form>
</div>