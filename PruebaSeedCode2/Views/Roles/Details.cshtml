@model PruebaSeedCode2.Models.Role

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 35px 40px;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.06);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1, h4 {
        text-align: center;
        color: #333;
        margin-bottom: 10px;
    }

    dl.row {
        margin-top: 20px;
        font-size: 1.1rem;
    }

    dt {
        font-weight: 600;
        color: #555;
    }

    dd {
        color: #444;
        margin-bottom: 15px;
    }

    .action-links {
        text-align: center;
        margin-top: 30px;
    }

        .action-links a {
            color: #007bff;
            text-decoration: none;
            margin: 0 10px;
            font-weight: 500;
        }

            .action-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="details-container">
    <h1>Detalle del rol</h1>
    <h4>Información del rol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.Id">✏️ Editar</a> |
        <a asp-action="Index">← Volver a la lista</a>
    </div>
</div>
