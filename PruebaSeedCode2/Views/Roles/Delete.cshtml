@model PruebaSeedCode2.Models.Role

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 35px 40px;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.06);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
    }

    h1, h3, h4 {
        color: #333;
        margin-bottom: 15px;
    }

    dl.row {
        margin-top: 20px;
        margin-bottom: 30px;
        font-size: 1.1rem;
        text-align: left;
    }

    dt {
        font-weight: 600;
        color: #555;
    }

    dd {
        color: #444;
    }

    form {
        display: flex;
        justify-content: center;
        gap: 20px;
        align-items: center;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 10px 25px;
        border-radius: 10px;
        font-weight: 600;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b02a37;
        }

    a {
        color: #007bff;
        font-weight: 500;
        text-decoration: none;
        line-height: 38px;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="delete-container">
    <h1>Eliminar rol</h1>
    <h3>¿Estás segura(o) que quieres eliminar este rol?</h3>
    <h4>Detalles del rol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index">← Volver a la lista</a>
    </form>
</div>

